.search {
  height: 55rpx;
  line-height: 55rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -ms-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  width: 90%;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  background: #fff;
  margin-left: 8rpx;
  margin-top: 4rpx;
}

.search image {
  width: 40rpx;
